# Telegram Bot Configuration
BOT_TOKEN="your_bot_token_here"
# Optional mode-specific tokens (recommended when running 2 bots from same code)
BOT_TOKEN_CURRENCY=""
BOT_TOKEN_TRADING=""
BOT_MODE="currency"

# Backend URL (auto-set on Render)
BACKEND_URL="http://127.0.0.1:8000"

# Database (auto-set on Render)
DATABASE_URL="bot_users.db"

# Admin credentials (used to seed the admin account)
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="change_me"

# Admin password reset token (keep secret)
ADMIN_RESET_TOKEN="set_a_strong_token"

# Optional: Currency price API (3rd-party)
# Use {pair} in the URL or provide it as ?pair= via query params.
CURRENCY_API_URL="https://api.example.com/price/{pair}"
CURRENCY_API_KEY=""
CURRENCY_API_KEY_HEADER="X-API-KEY"
CURRENCY_API_TIMEOUT="6"

# Optional: Trading screenshot analysis API (used when BOT_MODE=trading)
TRADING_API_URL="https://yoofirmtrading.xyz/api/analyze-screenshot"
TRADING_API_KEY=""
TRADING_API_KEY_HEADER="X-API-Key"
TRADING_API_TIMEOUT="20"
